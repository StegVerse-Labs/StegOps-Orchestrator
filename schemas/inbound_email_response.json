{
  "name": "inbound_email_response",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "classification": {
        "type": "string",
        "enum": [
          "interested",
          "not_now",
          "wrong_person",
          "pricing_question",
          "wants_call",
          "unsubscribe",
          "unknown"
        ]
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "requires_approval": {
        "type": "boolean"
      },
      "suggested_subject": {
        "type": "string"
      },
      "suggested_reply": {
        "type": "string"
      },
      "next_action": {
        "type": "string",
        "enum": [
          "schedule_call",
          "send_pricing",
          "send_onepager",
          "ask_clarifying_question",
          "close_no_action"
        ]
      },
      "notes": {
        "type": "string"
      }
    },
    "required": [
      "classification",
      "confidence",
      "requires_approval",
      "suggested_subject",
      "suggested_reply",
      "next_action",
      "notes"
    ]
  }
}